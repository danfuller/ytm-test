.exp
	position fixed
	top 0
	left 0
	z-index 1000

	&__users
		position fixed
		bottom 200px
		left 50%
		width 40px
		height 40px
		background-positon center
		background-size cover
		border-radius 50%

		transform scale(0.5)

		transition all 0.1s ease-in

		&:hover
			transform scale(1)


	&__user	
		position relative
		width 30px
		height 30px
		margin 30px 0 0 -11px
		pointer-events none
		background-positon center
		background-size cover
		border-radius 50%

	&__join
		position fixed
		bottom 20px
		right 20px

	&__control
		bottom 20px
		height: LINE_HEIGHT * 2
		font-step 1
		line-height LINE_HEIGHT * 2
		min-width LINE_HEIGHT * 2
		position fixed
		right 20px

		& div
			margin-left 10px	
			float right

		&__avatar
			min-height: LINE_HEIGHT * 2
			width LINE_HEIGHT * 2
			background-size cover


		
