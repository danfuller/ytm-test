lineColor		?= light(COLOR_BODY_BACKGROUND) ? blend(COLOR_BODY_BACKGROUND, #000, 8%) : blend(COLOR_BODY_BACKGROUND, #FFF, 8%)
bannerLineColor	?= light(COLOR_PRIMARY_BACKGROUND) ? blend(COLOR_PRIMARY_BACKGROUND, #000, 8%) : blend(COLOR_PRIMARY_BACKGROUND, #FFF, 8%)
bannerColor		?= lightness(COLOR_PRIMARY_BACKGROUND) > 70 ? blend(COLOR_PRIMARY_BACKGROUND, darken(COLOR_PRIMARY_BACKGROUND, 60%), 40%) : white
preColor		?= lightness(COLOR_PRIMARY_BACKGROUND) > 70 ? blend(COLOR_PRIMARY_BACKGROUND, #000, 5%) : white

.bootstrap
	repeating-gradient 	: 0deg lineColor 0px COLOR_BODY_BACKGROUND 1px unit(LINE_HEIGHT / 10, "rem")
	background-position	: top left
	background-repeat	: repeat
	background-size		: 100% LINE_HEIGHT

	code, pre
		font-family	: Menlo, Monaco, monospace
		background	: #FFF

	code
		margin: 0
		padding: 0

	pre
		vertical-space: 0, 1
		position	: relative
		padding		: LINE_HEIGHT
		display		: block
		max-height	: LINE_HEIGHT * 10
		overflow	: auto
		-webkit-overflow-scrolling: touch

.bootstrap__wrapper
	overflow	: visible
	max-width	: 1000px
	z-index		: 100
	margin		: 0 auto
	position	: relative

.bootstrap__banner
	width				: 100%
	position			: relative
	background			: COLOR_PRIMARY_BACKGROUND
	repeating-gradient 	: 0deg bannerLineColor 0px COLOR_PRIMARY_BACKGROUND 1px unit(LINE_HEIGHT / 10, "rem")
	background-position	: top left
	background-repeat	: repeat
	background-size		: 100% LINE_HEIGHT
	height 				: LINE_HEIGHT * 7
	color 				: bannerColor
	overflow			: hidden
	clear				: both
	z-index				: 50
	margin-top			: LINE_HEIGHT
	margin-bottom		: LINE_HEIGHT

	&:first-child
		margin-top: 0

	pre
		display: none

	p
		margin: 0

	h5
		font-weight: bold
		text-transform: uppercase
		letter-spacing: 1px

	a
		color				: white
		border-bottom-color	: white

		&:hover, &:active
			color				: blend(COLOR_PRIMARY_BACKGROUND, #000, 50%)
			border-bottom-color	: blend(COLOR_PRIMARY_BACKGROUND, #000, 50%)
	
	.bootstrap__label
		display	: block
		width	: 100%
		float	: left

		h1
			font-step		: 5
			vertical-space	: 2, 2
			relative		: top left
			color			: bannerColor
			display			: inline-block
			float			: left
			text-transform	: lowercase
			clear			: both
			font-weight 	: 300

			&:after
				absolute: bottom left
				content: ""
				width: 100%
				height: 4
				background: bannerColor

		a
			float 			: right
			height 			: LINE_HEIGHT
			margin-top 		: LINE_HEIGHT * 3
			line-height 	: LINE_HEIGHT - 4
			padding 		: 0 15px
			text-align		: center
			background		: COLOR_PRIMARY_BACKGROUND
			display			: block
			font-size		: 10
			text-transform 	: uppercase
			color			: bannerColor
			font-weight  	: 300
			letter-spacing 	: 1px
			border 			: 2px solid bannerColor

			&:hover
				background: bannerColor
				color: COLOR_PRIMARY_BACKGROUND

	&.open
		height: auto

		pre
			display: block

	.wrapper
		overflow: hidden