/**
 * REM Properties
 * Convert all following properties to use REM if you don't set an unit:
 * font-size, line-height, border-radius, width, height,
 * min-width, max-width, min-height, max-height, background-size
 * margin, margin-top, margin-bottom, margin-left, margin-right,
 * padding, padding-top, padding-bottom, padding-left, padding-right
 */
rembo(property, values)
	if(length(values) > 0)
		r = ''
		px = ''

		for value, index in values
			if(index)
				r = r + " "
				px = px + " "

			if typeof(value) is "unit" and value isnt 0
				if unit(value) is ""
					px = px + unit(value, "px")
					r = r + unit((value / 10), "rem")
				else
					px = px + value
					r = r + value
			else 
				px = px + value
				r = r + value

		{property}: unquote(px)
		
		if(px isnt r)
			{property}: unquote(r)
	else
		{property}

